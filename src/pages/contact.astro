          {/* Map */}
          <div class="w-full h-full min-h-[450px] rounded-lg overflow-hidden">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3453.946246629215!2d31.200985787179185!3d30.038399954220772!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1458470053f009f1%3A0xc6535ac6cde2bc1!2sincense!5e0!3m2!1sen!2seg!4v1741546027724!5m2!1sen!2seg" 
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade"
              class="w-full h-full">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
