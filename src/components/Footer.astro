---

<footer class="mt-auto">
  <div class="glass backdrop-blur-md">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Logo and Description -->
        <div class="col-span-1 md:col-span-2">
          <div class="flex items-center">
            <a href="/" class="flex items-center transform hover:scale-110 transition-transform duration-300">
              <img src="/images/logo.webp" alt="Incense Logo" class="h-16 w-auto" />
            </a>
          </div>
          <p class="mt-4 text-base text-white/90 max-w-md">
            Experience the perfect blend of traditional flavors and modern ambiance at Incense. 
            Join us for an unforgettable journey through exquisite beverages and premium shisha.
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="text-sm font-semibold text-white tracking-wider uppercase">Quick Links</h3>
          <ul class="mt-4 space-y-2">
            {quickLinks.map((link) => (
              <li>
                <a href={link.href} class="nav-link text-sm">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Contact Info -->
        <div>
          <h3 class="text-sm font-semibold text-white tracking-wider uppercase">Contact Us</h3>
          <ul class="mt-4 space-y-2">
            <li class="text-sm text-white/90">
              <span class="font-medium text-white">Address:</span><br/>
              123 Restaurant Street<br/>
              Cairo, Egypt
            </li>
            <li class="text-sm text-white/90">
              <span class="font-medium text-white">Phone:</span><br/>
              +20 123 456 7890
            </li>
            <li class="text-sm text-white/90">
              <span class="font-medium text-white">Email:</span><br/>
              info@incense.com
            </li>
          </ul>
        </div>
      </div>

      <!-- Social Links and Copyright -->
      <div class="mt-8 pt-8 border-t border-white/10">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex space-x-6 mb-4 md:mb-0">
            {socialLinks.map((item) => (
              <a
                href={item.href}
                class="text-white/80 hover:text-white transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">{item.name}</span>
                <Fragment set:html={item.icon} />
              </a>
            ))}
          </div>
          <p class="text-sm text-white/80">
            &copy; {currentYear} Incense. All rights reserved.
          </p>
          <div class="flex items-center justify-center mt-4 space-x-2 opacity-80 hover:opacity-100 transition-opacity">
            <span class="text-sm text-white/90">Designed & Developed by</span>
            <a 
              href="https://zhive249.com" 
              target="_blank" 
              rel="noopener noreferrer"
              class="flex items-center hover:scale-105 transition-transform"
            >
              <img src="/zhive249-logo.svg" alt="Zhive249 Logo" class="h-5 ml-1" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
